                    <div class="col-lg-offset-1 col-lg-9 col-xs-offset-1 col-xs-9">
                        <em>Personnes inscrites</em>
                        <p>
                            {% for participant in event.participants %}
                                 <a href="{{path('participant_detail', {'id':participant.id})}}"> 
