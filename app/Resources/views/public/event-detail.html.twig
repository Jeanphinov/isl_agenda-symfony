{% block body %}
    <div class="jumbotron">
        <div class="row info">
            <div class="col-lg-offset-2 col-lg-2">Debut: {{event.debut|date("d/m/y")}} </div>
            <div class="col-lg-2">
                fin: {% if event.fin is not null %}
                {{event.debut|date("d/m/y")}}
