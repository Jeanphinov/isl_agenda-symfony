{% extends 'base.html.twig' %}
{# form_theme form 'form/fields.html.twig' #}

{% block page_heading %}Event - {{action}} {% endblock %}




{% block body %}
    <div class="row">
        {{form_start(form, {'attr': {'class': 'sf-form col-lg-offset-3 col-lg-6 '}} )}}
        {{form_row(form.nom)}}
        {{form_row(form.description)}}
        {{form_row(form.categorie)}}
        {{form_row(form.debut)}}
        {{form_row(form.fin)}}
        {{form_row(form.participants)}}
        
        {{form_row(form.image)}}
      {#  {{form_row(form.events)}} #}
        <div class="btn-group col-lg-offset-2">

            {{form_widget(form.ajout,{'attr': {'': ''}} )}}
            {% if form.supprimer is defined %}
                {{form_widget(form.supprimer,{'attr': {'': ''}} )}}
            {% endif %}

        </div>
        {{form_end(form)}}


    </div>

{% endblock %}
